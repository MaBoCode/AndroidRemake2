<resources>

    <style name="Theme.Apptemplatejava.DayNight" parent="Theme.Apptemplatejava" />

    <style name="Theme.Apptemplatejava" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/blue_600</item>
        <item name="colorPrimaryVariant">@color/blue_300</item>
        <item name="colorSecondary">@color/orange_300</item>
        <item name="colorSecondaryVariant">@color/orange_500</item>

        <item name="android:colorBackground">@color/white_50</item>
        <item name="colorSurface">@color/blue_200</item>
        <item name="colorPrimarySurfaceVariant">?attr/colorSurface</item>
        <item name="colorError">@color/red_400</item>

        <item name="colorOnPrimary">@color/white_50</item>
        <item name="colorOnSecondary">@color/black_900</item>
        <item name="colorOnBackground">@color/black_900</item>
        <item name="colorOnSurface">@color/black_900</item>
        <item name="colorOnError">@color/black_900</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!--Typography-->
        <item name="textAppearanceHeadline2">@style/TextAppearance.AndroidRemake2.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.AndroidRemake2.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.AndroidRemake2.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.AndroidRemake2.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.AndroidRemake2.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.AndroidRemake2.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.AndroidRemake2.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.AndroidRemake2.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.AndroidRemake2.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.AndroidRemake2.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.AndroidRemake2.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.AndroidRemake2.Overline</item>

        <item name="bottomSheetDialogTheme">@style/Theme.Apptemplatejava.BottomSheetDialog</item>

        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="bottomNavigationStyle">@style/Widget.Apptemplatejava.BottomNavigationView</item>

    </style>

    <style name="Theme.Apptemplatejava.BottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Apptemplatejava.BottomSheet.Modal</item>
        <item name="android:windowIsFloating">false</item>
        <item name="enableEdgeToEdge">true</item>
    </style>

    <style name="Theme.Apptemplatejava.PodcastListItem" parent="Widget.MaterialComponents.CardView">
        <item name="android:textColor">@color/white_50</item>
    </style>

    <style name="Widget.Apptemplatejava.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Apptemplatejava.BottomNavigationView
        </item>
    </style>

    <style name="ThemeOverlay.Apptemplatejava.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/white_50</item>
        <item name="colorOnSurface">@color/white_50</item>
        <item name="colorSurface">@color/blue_300</item>
    </style>

</resources>